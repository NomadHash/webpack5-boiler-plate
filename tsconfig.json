{
    "compilerOptions": {
        "types": [
            "@emotion/react/types/css-prop"
        ],
        "outDir": "./dist",
        "target": "es5",
        "module": "esnext",
        "jsx": "react-jsx",
        "noImplicitAny": true,
        "allowSyntheticDefaultImports": true,
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "baseUrl": ".",
        "paths": {
            "@src/*": [
                "src/*"
            ],
            "@components/*": [
                "src/components/*"
            ],
            "@lib/*": [
                "src/lib/*"
            ],
        }
    },
    "include": [
        "src"
    ]
}